<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Diary Entry 1 with reduced width -->
    <androidx.cardview.widget.CardView
        android:id="@+id/entry1"
        android:layout_width="315dp"
        android:layout_height="82dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#FFF59D"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Suasana"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Catatan"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timeClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jam"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/entry1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/entry1"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <!-- Diary Entry 2 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/entry2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFAB91"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/entry1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
