<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9">

    <!-- Kontainer Kalender -->
    <LinearLayout
        android:id="@+id/calendarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE3E3"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="32dp"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Kalender -->
        <CalendarView
            android:id="@+id/calendarView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Grid untuk Elemen Tambahan di Bawah Kalender -->
        <GridLayout
            android:id="@+id/calendarGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="6"
            android:gravity="center" />
    </LinearLayout>

    <!-- Tombol Aksi di Kanan Atas -->
    <ImageButton
        android:id="@+id/actionButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/circle_button_calender"
        android:src="@drawable/ic_calender"
        android:contentDescription="Calendar button"
        android:elevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView untuk Menampilkan Diary -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diaryRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/calendarContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
